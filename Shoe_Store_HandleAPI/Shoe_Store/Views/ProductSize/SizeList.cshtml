@model IPagedList<Data.Models.ProductSize>
@using PagedList;
@using PagedList.Mvc;

<main class="app-main">

    <div class="app-content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-8">
                    <h3 class="mb-0">Size List</h3>
                </div>
                <div class="col-sm-4">
                    <ol class="breadcrumb float-sm-end">
                        <li class="breadcrumb-item active" aria-current="page">Size List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="app-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Action</h3>
                            <div class="card-tools d-flex align-items-center justify-content-center" style="padding-top: 10px;">
                                <button type="button" class="btn btn-tool" data-lte-toggle="card-collapse" title="Collapse">
                                    <i data-lte-icon="expand" class="bi bi-plus-lg"></i>
                                    <i data-lte-icon="collapse" class="bi bi-dash-lg"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <a asp-action="Create" class="btn btn-primary mb-3" title="Add Size">
                                <i class="fas fa-plus"></i>
                            </a>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h3 class="card-title">Size Information</h3>
                        </div>

                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped text-center">
                                    <thead>
                                        <tr>
                                            <th>Size</th>
                                            <th>Actions</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Count > 0)
                                        {
                                            foreach (var size in Model)
                                            {
                                                <tr>
                                                    <td class="align-middle">@size.Size</td>

                                                    <td class="align-middle">
                                                        <a asp-action="Update" asp-route-id="@size.SizeId" class="btn">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@size.SizeId" class="btn" onclick="return confirm('Are you sure you want to delete this Size?');">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="7" class="text-center">No Size found.</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div> <!-- /.table-responsive -->
                        </div> <!-- /.card-body -->

                        <div class="card-footer clearfix">
                            <ul class="pagination pagination-sm m-0 float-end">
                                @for (int i = 1; i <= Model.PageCount; i++)
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("SizeList", new { page = i })">@i</a>
                                    </li>
                                }
                            </ul>
                        </div> <!-- /.card-footer -->
                    </div> <!-- /.card -->
                </div> <!--end::Row-->
            </div> <!-- /.card -->
        </div> <!--end::Container-->
    </div> <!--end::App Content-->

</main> <!--end::App Main-->
