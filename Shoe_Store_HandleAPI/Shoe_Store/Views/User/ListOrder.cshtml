@model List<Data.Models.Order>

<main class="app-main">

    <div class="app-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin đơn hàng</h3>
                        </div>

                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped text-center">
                                    <thead>
                                        <tr>
                                            <th>Khách Hàng</th>
                                            <th>Tổng giá</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Any())
                                        {
                                            foreach (var order in Model)
                                            {
                                                <tr>
                                                    <td class="align-middle">@order.OrderName</td>
                                                    <td class="align-middle">@order.Total.ToString("N0") VNĐ</td>
                                                    <td>
                                                        
                                                        <a asp-action="Payment" class="btn btn-success">Payment</a>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4">
                                                        <div class="table-responsive">
                                                            <table class="table table-bordered mt-3">
                                                                <thead>
                                                                    <tr>
                                                                        <th>STT</th>
                                                                        <th>Tên sản phẩm</th>
                                                                        <th>Hình ảnh</th>
                                                                        <th>Số lượng</th>
                                                                        <th>Kích thước</th>
                                                                        <th>Giá</th>
                                                                        <th>Action</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @if (order.orderDetails != null && order.orderDetails.Any())
                                                                    {
                                                                        int stt = 1;
                                                                        foreach (var detail in order.orderDetails)
                                                                        {
                                                                            <tr>
                                                                                <td>@stt</td>
                                                                                <td>@(string.IsNullOrWhiteSpace(detail.product?.ProductName) ? "Không có tên" : detail.product.ProductName)</td>
                                                                                <td>
                                                                                    @if (!string.IsNullOrEmpty(detail.product?.Image))
                                                                                    {
                                                                                        <img src="@Url.Action("GetImage", "Order", new { imageName = detail.product.Image })" style="width:80px; height:auto;" alt="Ảnh sản phẩm" />
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <span>Không có ảnh</span>
                                                                                    }
                                                                                </td>
                                                                                <td>@detail.Quantity</td>
                                                                                <td>@detail.Size</td>
                                                                                <td>@detail.Price.ToString("N0") VNĐ</td>   
                                                                                <td>
                                                                                    <a asp-controller="Order" asp-action="DeleteOrderDetail" asp-route-id="@order.Id" class="btn" onclick="return confirm('Are you sure you want to delete this product?');">
                                                                                        <i class="fas fa-trash"></i>
                                                                                    </a>
                                                                                </td>
                                                                            </tr>
                                                                            stt++;
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <tr>
                                                                            <td colspan="6" class="text-center">Không có chi tiết đơn hàng</td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center">Không có đơn hàng nào</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
