@model List<Data.Models.Product>


@if (ViewData["message"] != null)
{
    <div class="alert alert-info">
        @ViewData["message"]
    </div>
}



<div class="row mt-4">
    <div class="col-md-2">
        <!-- Phần danh sách -->
        <h2>Danh sách</h2>
        <div class="list-group"
            <a href="#" class="list-group-item list-group-item-action active">Đồ ăn Nhanh</a>
            <a href="#" class="list-group-item list-group-item-action">Hót</a>
            <a href="#" class="list-group-item list-group-item-action">best seller</a>
            <a href="#" class="list-group-item list-group-item-action">Đại Hạ giá</a>
            <a href="#" class="list-group-item list-group-item-action">Gà KFC</a>
            <a href="#" class="list-group-item list-group-item-action">Piza</a>
            <a href="#" class="list-group-item list-group-item-action">Khoai tây Chiên</a>
        </div>
    </div>

    <div class="col-md-10">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid text-center">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Dropdown link
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <h2>Sản phẩm</h2>
        @if (Model.Count == 0)
        {
            <p class="text-center">Không có sản phẩm nào!</p>
        }
        else
        {
            <div class="row">
                <!-- Lặp qua danh sách sản phẩm để hiển thị từng sản phẩm -->
                @foreach (var sanpham in Model)
                {
                    <div class="col-md-4 mb-4">
                        <a asp-action="ProductDetail" asp-route-id="@sanpham.Id" class="text-decoration-none text-dark">
                            <div class="card h-100 border-0">
                                @if (sanpham.Image != null)
                                {
                                    <img src="@Url.Action("GetImage", "User", new { imageName = sanpham.Image })" class="card-img-top" alt="@sanpham.ProductName" style="width:100%; height: 100%;/>

                                }
                                else
                                {
                                    <img src="https://via.placeholder.com/200" class="card-img-top" alt="No image" />
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@sanpham.ProductName</h5>

                                        @if (!string.IsNullOrEmpty(sanpham.Description) && sanpham.Description.Length > 50)
                                        {
                                            @sanpham.Description.Substring(0, 170)
                                        }
                                        else
                                        {
                                            @sanpham.Description
                                        }
                                    <p class="card-text mt-3"><strong>Price:</strong> @sanpham.Price VND</p>
                                    <p class="card-text"><strong>Color:</strong> @sanpham.Color</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</div>
